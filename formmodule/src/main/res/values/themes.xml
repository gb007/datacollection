<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smart_Sports_Form_Module" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/form_module_purple_500</item>
        <item name="colorPrimaryVariant">@color/form_module_purple_700</item>
        <item name="colorOnPrimary">@color/form_module_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/form_module_teal_200</item>
        <item name="colorSecondaryVariant">@color/form_module_teal_700</item>
        <item name="colorOnSecondary">@color/form_module_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Form_ModuleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/form_module_colorPrimary</item>
        <item name="colorPrimaryDark">@color/form_module_colorPrimaryDark</item>
        <item name="colorAccent">@color/form_module_colorAccent</item>
    </style>

</resources>